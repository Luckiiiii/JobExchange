@{
    Layout = "_LayoutHomePage";
}

@model IEnumerable<JobInfo>

<div class="container">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Tên công ty</th>
                <th>Vị trí</th>
                <th>Lương</th>
                <th>Địa chỉ</th>
                <th>Mô tả</th>
                <th>Ngày đăng</th>
                <th></th>
            </tr>
        </thead>
        <tbody id ="jobInfo">
            @foreach (var jobInfo in Model)
            {
                <tr>
                    <td>@jobInfo.Id</td>
                    <td>@jobInfo.Employer.CompanyName</td>
                    <td>@jobInfo.Position</td>
                    <td>@jobInfo.Salary</td>
                    <td>@jobInfo.Address</td>
                    <td>@jobInfo.Describe</td>
                    <td>@jobInfo.PostTime</td>
                    <td >
                        <form asp-action="UpdateJobInfo" asp-route-id="@jobInfo.Id" method="post">
                            <input type="submit" value="Update" class="btn btn-info"/>
                            
                        </form>
                       @* <button asp-action="DeleteJobInfo" asp-route-id="@jobInfo.Id" onclick="deleteJob('@jobInfo.Id')" method="post">
                            Xoa
                            @*<input type="submit" value="Xóa" class="btn btn-danger" onclick="return confirm('Bạn có chắc muốn xóa công việc này không?');" />                      
                        </button>*@
                        <button class="delete" data-id="@jobInfo.Id">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

